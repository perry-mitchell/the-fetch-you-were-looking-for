{
  "name": "the-fetch-you-were-looking-for",
  "version": "0.1.0",
  "description": "Universal JavaScript fetch utility for NodeJS, Browsers and React-Native",
  "main": "source/index.js",
  "scripts": {
    "build": "run-s build:node build:web",
    "build:node": "cross-env BABEL_ENV=node npm run pack",
    "build:web": "cross-env BABEL_ENV=web npm run pack",
    "copy": "run-p copy:node copy:web",
    "copy:node": "cp dist/universal-fetch.node.js ./node.js",
    "copy:web": "cp dist/universal-fetch.web.js ./web.js",
    "pack": "webpack --progress",
    "prepublish": "run-s build copy",
    "pub": "np",
    "serve:test": "serve -p 8081 --cors ./test/resources",
    "test": "run-s test:node test:web",
    "test:node": "npm run build:node && concurrently -k -n 'server,mocha' -s first 'npm run serve:test' 'npm run test:node:mocha'",
    "test:node:mocha": "mocha -r test/node/index.js 'test/node/**/*.spec.js'",
    "test:web": "concurrently -k -n 'server,karma' -s first 'npm run serve:test' 'cross-env BABEL_ENV=web karma start'",
    "test:web:watch": "concurrently -k -n 'server,karma' -s first 'npm run serve:test' 'cross-env BABEL_ENV=web karma start --watch --single-run=false'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perry-mitchell/the-fetch-you-were-looking-for.git"
  },
  "keywords": [
    "fetch",
    "nodejs",
    "polyfill"
  ],
  "author": "Perry Mitchell <perry@perrymitchell.net>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "~6.26.0",
    "babel-loader": "~7.1.2",
    "babel-preset-env": "~1.6.1",
    "blob-to-buffer": "~1.2.6",
    "buffer": "~5.0.8",
    "chai": "~4.1.2",
    "chromedriver": "~2.33.2",
    "concurrently": "~3.5.0",
    "cross-env": "~5.1.0",
    "istanbul": "~0.4.5",
    "istanbul-instrumenter-loader": "~3.0.0",
    "karma": "~1.7.1",
    "karma-chai": "~0.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage": "~1.1.1",
    "karma-firefox-launcher": "~1.0.1",
    "karma-mocha": "~1.3.0",
    "karma-sinon": "~1.0.5",
    "karma-spec-reporter": "0.0.31",
    "karma-webpack": "~2.0.5",
    "mocha": "~4.0.1",
    "node-fetch": "~1.7.3",
    "np": "~2.16.0",
    "npm-run-all": "~4.1.1",
    "null-loader": "~0.1.1",
    "serve": "~6.3.1",
    "sinon": "~4.0.1",
    "webpack": "~3.8.1"
  }
}
